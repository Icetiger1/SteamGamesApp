@model SteamGamesApp.Models.SteamUser;
@{
    ViewData["Title"] = "SteamGamesApp";
}
<h2 class="text-center text-light">Список игр Steam и количество часов, проведенных в них:</h2>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-offset-1 col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <h5 class="text-light">@Model.NameUser</h5>
                        <div class="row">
                            <div class="col-md-2 mb-3">
                                <img class="border border-5 border-success" src="@Model.IconUser">
                                <br />
                            </div>
                            <div class="col-md-7 mb-4">
                                <p class="text-light">Имя: @Model.Realname</p>
                                <p class="text-light">Дата последнего входа: @Model.TimeCreate</p>
                            </div>
                        </div>
                        <div class="panel-body table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Иконка</th>
                                        <th>ID игры</th>
                                        <th>Название игры</th>
                                        <th>Количество часов</th>
                                        <th>Дата последнего входа</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.GameInfo)
                                    {
                                        <tr>
                                            <td><img src=@game.IconUrl class="rounded-circle"></td>
                                            <td>@game.AppId</td>
                                            <td>@game.Name</td>
                                            <td>@game.Playtime ч.</td>
                                            <td>@game.Lastplayed</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Не удалось получить данные об играх пользователя.</p>
}
